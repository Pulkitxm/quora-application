<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <a href="/posts"><h1 class="fix" >Quora Posts</h1></a>
    <div class="posts">
        <% if (posts.length>=1){ %>
        <% posts.forEach(post=>{ %>
            <a href="/posts/<%= post.id %>">
                <div class="post disable" >
                    <h3>@<%= post.username %>
                        <form method="GET" class="dlt" action="/edit/<%= post.id %>">
                            <button>
                                <img src="edit.png" class="edit" />
                            </button>
                        </form>
                        <form method="POST" class="dlt" action="/posts/<%= post.id %>?_method=DELETE">
                            <button>
                                <img src="dlt.png" class="edit" />
                            </button>
                        </form>
                    </h3>
                    <p><%= post.content %></p>
                </div>
            </a>
            <% }) %>
        <% } else{ %>
            No posts yet Start by 
            <a href="/new">
                adding a new post
            </a>
        <% } %>
        <div class="new">
            <a href="/new">
                Create a new post
            </a>
        </div>
    </div>
</body>
</html>